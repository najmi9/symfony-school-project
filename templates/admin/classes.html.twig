{% block body %}
  <div class="container">
  	<div class="container">
  		<nav class="navbar bg-success">
  			<ul class="navbar-nav">
  				<li class="navbar-item">
  					<a href="" class="btn btn-success">
  					  Class<i class="fas fa-plus"></i>
  					</a>
  				</li>
