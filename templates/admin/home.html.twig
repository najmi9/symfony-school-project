                        <div class="col-4">
                            <i class="fas fa-book fa-3x"></i>
                        </div>
                        <div class="col-8">
                            <h4 class="card-title">{{ stats.courses }}Cours</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>    
    </div>
