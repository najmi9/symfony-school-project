        <th></th>
    </header>

    <body>
        {% for payement in payements %}
        {% if payement.student.classe.name == "PHYS" %}
        {% include "_payement.html.twig" %}
        {% endif %}

        {% endfor %}
    </body>
</table>
{% endif %}


{% endblock %}