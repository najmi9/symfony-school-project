{% extends "admin/base.html.twig" %}

{% block body %}
{% if payements| length ==0 %}
<h3 class="text-center">
    Il n'a pas encore des paiements !.
</h3>
{% else %}
<h3> Classe : MATH </h3>
<table class="table table-stripped">
    <header>
        <th>Etudiant : </th>
        <th>Mois : </th>
        <th>Prix : </th>
        <th>Date : </th>
        <th></th>
