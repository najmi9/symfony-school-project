{% extends "admin/base.html.twig" %}

{% block body %}
{% if depayements| length == 0 %}
<h3 class="text-center">
    Il n'a pas encore des depaiements !.
</h3>
{% else %}
<h3> Classe : MATH </h3>
<table class="table table-stripped">
    <header>
        <th>Prof : </th>
        <th>Mois : </th>
        <th>Prix : </th>
        <th>Date : </th>
        <th></th>
    </header>

    <body>
        {% for depayement in depayements %}
        {% if depayement.prof.classe.name == "MATH" %}
        <tr>
            <td>{{ depayement.prof.name }}</td>
            <td>{{ depayement.month.name }}</td>
            <td>{{ depayement.price }}</td>
            <td>{{ depayement.createdAt| date("Y/m/d H:i:s") }}</td>
            <td>
                <a href="" class="btn btn-outline-danger btn-sm">
                    <i class="fas fa-trash"></i>
                </a>
                <a href="" class="btn btn-outline-success btn-sm">
                    <i class="fas fa-edit"></i>
                </a>
            </td>
        </tr>
        {% endif %}

        {% endfor %}
    </body>
</table>
