{% extends 'base.html.twig' %}


{% block title %}Payements| NajmiAccademy.com{% endblock %}



{% block body %}
 {% for label, messages in app.flashes %}
    <div class="container">
        <div class="alert alert-{{ label }}">
            {% for message in messages %}
                <p>{{ message | raw }}</p>
            {% endfor %}
        </div>
{% endfor %}

  {% if myPayements|length == 0 %}
  	<h3 class="text-center text-info bg-light">
  		Il n'a encore des payements !
  	</h3>
  {% else %}
  		<table class="table">
 	<header>
 		<th>Mois : </th>
 		<th>Prix : </th>
 		<th>Date : </th>
 	</header>
 	<body>
 		{% for item in myPayements %}
           <tr>
           	<td> {{ item.month.name }} </td>
           	<td> {{ item.price }} </td>
           	<td> {{ item.createdAt | date }} </td>
           </tr>
 		{% endfor %}
 	</body>
 </table>
  {% endif %}

{% endblock %}